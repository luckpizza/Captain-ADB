!!! 5
%html{:lang => "en"}
  %head
    %meta{ :charset => "utf-8" }
    %script{ :src => '/plugins/jquery/jquery-1.11.1.min.js' }
    %script{ :src => '/plugins/bootstrap/js/bootstrap.min.js' }
    %link{ :href => '/plugins/bootstrap/css/bootstrap.min.css', :rel => 'stylesheet' }
    %link{ :href => '/my/css/style.css', :rel => 'stylesheet' }
    - if defined? @use_jquery_ui
      %script{ :src => '/plugins/jquery/jquery-ui.min.js' }
      %link{ :href => '/plugins/jquery/jquery-ui.css', :rel => 'stylesheet' }
    - if defined? @use_d3
      %script{ :src => '/plugins/d3/d3.v3.min.js', :charset => 'utf-8' }
    - if defined? @use_pnotify
      %script{ :src => '/plugins/pnotify/pnotify.custom.min.js' }
      %link{ :href => '/plugins/pnotify/pnotify.custom.min.css', :rel => 'stylesheet', :media => 'all' }
    - if defined? @use_fotorama
      %script{ :src => '/plugins/fotorama/fotorama.js' }
      %link{ :href => '/plugins/fotorama/fotorama.css', :rel => 'stylesheet' }
    %title Captain ADB
    %link{ :rel => 'icon', :href => '/img/favicon.png' }
  %body
    %header{:class => "top-banner"}
      %div{:class => "top-banner-logo"}
        %a{:href => "/"}
          %img{:src => "img/captain_android.png"}
      %div{:class => "top-banner-text"}
        %h1{:class => "terminal"} KeepMeCharged
    %div{:class => "container-fluid"}
      = yield